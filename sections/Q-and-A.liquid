{%- style -%}
  .faq_qa_mian {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .faq_qa_mian {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="faq_qa_mian">
  <div class="page-width">
    <div class="faq_qna_iner">
      <div class="faq_qa_heading">
        {% if section.settings.h2 != blank %}
          <h2 data-aos="fade-up">
            {{ section.settings.h2 }}
            <small>{{ section.settings.sub_txt }}</small>
          </h2>
        {% endif %}
      </div>
      <div class="quetion_item">
        {% for block in section.blocks %}
          <div class="qn_group_main">
            <div class="ques_title">
              {% if block.settings.h3 != blank %}
                <h3>{{ block.settings.h3 }}</h3>

                <span class="onc_arrow">
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="feather feather-chevron-up"
                  >
                    <polyline points="18 15 12 9 6 15"></polyline>
                  </svg>
                </span>
              {% endif %}
            </div>
            <div class="answer_txt">
              {% if block.settings.text %}
                {{ block.settings.text }}
              {% endif %}
            </div>
          </div>
          <hr class="qna_hr">
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Q And A",
  "settings": [
    {
      "type": "text",
      "id": "h2",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub_txt",
      "label": "Sub Heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Q&A",
      "settings": [
        {
          "type": "text",
          "id": "h3",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Q And A"
    }
  ]
}
{% endschema %}

