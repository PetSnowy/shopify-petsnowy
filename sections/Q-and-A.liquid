{{ 'q-and-a.css' | asset_url | stylesheet_tag }}

<div class="faq_qa_main">
  <div class="page-width faq-page">
    <div class="m-sidebar-wrapper">
      <select></select>
    </div>
    <div class="faq_qa_heading">
      <div class="search">
        <input type="text" placeholder="Please enter the search">
        <button>search</button>
      </div>
      {% if section.settings.h1 != blank %}
        <h1>
          {{ section.settings.h1 }}
          <small>{{ section.settings.sub_txt }}</small>
        </h1>
      {% endif %}
    </div>
    <div class="faq-wrapper">
      <aside class="page-sidebar">
        <div class="sidebar-wrapper">
          {% for aside in section.blocks %}
            {% if aside.type == 'title' %}
              <div class="aside-item">{{ aside.settings.h2 }}</div>
            {% endif %}
          {% endfor %}
        </div>
      </aside>
      <div class="faq_qna_iner">
        <div class="quetion_item">
          {% for block in section.blocks %}
            <div class="option">
              {% if block.type == 'title' %}
                <h2 class="title">{{ block.settings.question_section_title }}</h2>
              {% endif %}
              {% if block.type == 'block' %}
                {% render 'question-section' %}
                <hr class="qna_hr">
              {% endif %}
              <div class="liquid">{{ block.settings.question_section_faq }}</div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="search-result"></div>
  </div>
</div>
<script src="{{ 'q-and-a.js' | asset_url }}"></script>

{% schema %}
{
  "name": "Q And A",
  "settings": [
    {
      "type": "text",
      "id": "h1",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub_txt",
      "label": "Sub Heading"
    }
  ],
  "blocks": [
    {
      "type": "faq-item",
      "name": "title",
      "settings": [
        {
          "type": "text",
          "id": "question_section_title",
          "label": "Question Section Title"
        },
        {
          "type": "liquid",
          "id": "question_section_faq",
          "label": "Question Section FAQ"
        }
      ]
    },
    {
      "type": "block",
      "name": "Q&A",
      "settings": [
        {
          "type": "text",
          "id": "h3",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Answer"
        },
        {
          "type": "url",
          "id": "video",
          "label": "Desktop Video"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Q And A"
    }
  ]
}
{% endschema %}

