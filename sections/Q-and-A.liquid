{{ 'q-and-a.css' | asset_url | stylesheet_tag }}
<div class="faq_qa_mian">
  <div class="page-width">
    <div class="faq_qa_heading">
      {% if section.settings.h2 != blank %}
        <h2>
          {{ section.settings.h2 }}
          <small>{{ section.settings.sub_txt }}</small>
        </h2>
      {% endif %}
    </div>
    <div class="page-width">
      <aside class="aside">
        {% for aside in section.blocks %}
          {% if aside.type == 'title' %}
            <div class="aside-item">{{ aside.settings.h2 }}</div>
          {% endif %}
        {% endfor %}
      </aside>
      <div class="faq_qna_iner">
        <div class="quetion_item">
          {% for block in section.blocks %}
            {% if block.type == 'title' %}
              <h2>{{ block.settings.h2 }}</h2>
            {% endif %}
            {% if block.type == 'block' %}
              <div class="qn_group_main">
                <div class="ques_title">
                  {% if block.settings.h3 != blank %}
                    <h3>{{ block.settings.h3 }}</h3>
                    <span class="onc_arrow">
                      <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="feather feather-chevron-up"
                      >
                        <polyline points="18 15 12 9 6 15"></polyline>
                      </svg>
                    </span>
                  {% endif %}
                </div>
                <div class="answer_txt">
                  {% if block.settings.text %}
                    {{ block.settings.text }}
                  {% endif %}
                </div>
              </div>
              <hr class="qna_hr">
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Q And A",
  "settings": [
    {
      "type": "text",
      "id": "h2",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub_txt",
      "label": "Sub Heading"
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "title",
      "settings": [
        {
          "type": "text",
          "id": "h2",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "block",
      "name": "Q&A",
      "settings": [
        {
          "type": "text",
          "id": "h3",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Q And A"
    }
  ]
}
{% endschema %}

