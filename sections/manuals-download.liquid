{{ 'manuals.css' | asset_url | stylesheet_tag }}

<div class="product-manuals page-width">
  <div class="manuals-wrapper">
    {% for block in section.blocks %}
      <div class="product-manuals">
        <div class="image">
          <img decoding="async" src="{{ block.settings.image | img_url: 'master' }}" alt="petsnowy" loading="lazy">
        </div>
        <p class="text">{{ block.settings.title }}</p>
        <a href="{{ block.settings.url }}" target="_blank" class="button">Download PDF</a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "manuals",
  "settings": [
    {
      "type": "text",
      "id": "h1",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "url",
          "id": "url",
          "label": "url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "manuals"
    }
  ]
}
{% endschema %}
