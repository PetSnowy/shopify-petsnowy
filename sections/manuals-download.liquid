{{ 'manuals.css' | asset_url | stylesheet_tag }}

<div class="manuals page-width">
  {% for block in section.blocks %}
    <div class="product-manuals">
      <div class="image">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="petsnowy" loading="lazy">
      </div>
      <p class="text">{{ block.settings.title }}</p>
      <iframe
        src="{{ block.settings.url }}"
        width="100%"
        height="100%"
      >
        <a href="{{ block.settings.url }}">Download PDF</a></iframe
      >
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "manuals",
  "settings": [
    {
      "type": "text",
      "id": "h1",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "url",
          "id": "url",
          "label": "url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "manuals"
    }
  ]
}
{% endschema %}
