<div class="custom-banr-main about_video_section">
  <div class="banner_inner">
    <div class="video_link">
      {% if section.settings.vdio != blank %}
        <video
          class="desk_video custom_videoss"
          width="100%"
          height="100%"
          muted
          autoplay
          playsinline
          {% if section.settings.vdio_img != blank %}
            poster="{{ section.settings.vdio_img | img_url: 'master'}}"
          {% endif %}
        >
          <source src defer-src="{{ section.settings.vdio }}" type="video/mp4">
        </video>
      {% endif %}
      {% if section.settings.mobvdio != blank %}
        <video
          class="mob_video custom_videoss"
          width="100%"
          height="100%"
          muted
          autoplay
          playsinline
          {% if section.settings.mobvdio_img != blank %}
            poster="{{ section.settings.mobvdio_img | img_url: 'master'}}"
          {% endif %}
        >
          <source src defer-src="{{ section.settings.mobvdio }}" type="video/mp4">
        </video>
      {% endif %}
      <div class="baner_contain">
        <div class="page-width">
          {% if section.settings.heading != blank %}
            <h1 class="cstm_banner_title">
              <span>{{ section.settings.heading }}</span>
            </h1>
          {% endif %}
          {% if section.settings.sub_heading != blank %}
            {{ section.settings.sub_heading }}
          {% endif %}
          {% if section.settings.btn_text != blank %}
            <div class="itg_banner_video_btn">
              <a href="{{ section.settings.btn_url }}" class="button button--primary">
                {{- section.settings.btn_text -}}
              </a>
            </div>
          {% endif %}
          {% if template contains 'indiegogo' %}
            <div class="slide_arrow" style="left: 50%;">
              {% render 'arrow-down-icon' %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner Video",
  "settings": [
    {
      "type": "image_picker",
      "id": "vdio_img",
      "label": "Desktop Video Image"
    },
    {
      "type": "url",
      "id": "vdio",
      "label": "Desktop Video"
    },
    {
      "type": "image_picker",
      "id": "mobvdio_img",
      "label": "Mobile Video Image"
    },
    {
      "type": "url",
      "id": "mobvdio",
      "label": "Mobile Video"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "sub_heading",
      "label": "Sub Heading"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Url"
    }
  ],
  "presets": [
    {
      "name": "Banner Video"
    }
  ]
}
{% endschema %}

