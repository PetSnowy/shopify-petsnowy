{{ 'active-img.css' | asset_url | stylesheet_tag }}

<div class="active-img">
  <picture class="page-width">
    <source media="(min-width: 901px)" data-srcset="{{ section.settings.pc_image | img_url: 'master' }}">
    <source media="(max-width: 900px)" data-srcset="{{ section.settings.mb_image | img_url: 'master' }}">
    <img
      alt="petsnowy"
      decoding="async"
      loading="lazy"
    >
  </picture>
</div>

{% schema %}
{
  "name": "active-img",
  "settings": [
    {
      "type": "image_picker",
      "id": "pc_image",
      "label": "pc image"
    },
    {
      "type": "image_picker",
      "id": "mb_image",
      "label": "mb image"
    }
  ],
  "presets": [
    {
      "name": "active-img"
    }
  ]
}
{% endschema %}
