{% style %}
  .social_main_div {
    padding-top: {{section.settings.space_top }}px;
    padding-bottom: {{section.settings.space_bottom }}px;
  }
{% endstyle %}

<div class="social_main_div">
  <div class="page-width">
    <div class="social_contain_flx">
      <div class="social_pt_1">
        <div class="charms_hedng">
          {% if section.settings.heading != blank %}
            <h3 data-aos="fade-up" data-aos-duration="800">{{ section.settings.heading }}</h3>
          {% endif %}
        </div>
        <div class="social_intsa">
          {% if section.settings.app_url != blank %}
            <a data-aos="fade-up" data-aos-duration="800" href="{{ section.settings.app_url }}" target="blank">
              <span class="socl_insta_icon">{% render 'icon-instagram' %}</span>
              <span>{{ section.settings.insta_txt }}</span>
            </a>
          {% endif %}
        </div>
      </div>
      <div class="social_pt_2">
        <div class="social_img_large">
          {% if section.settings.img != blank %}
            <div class="social_animation_zoom">
              <img
                decoding="async"
                data-src="{{ section.settings.img | img_url: 'master' }}"
                alt="petsnowy"
                loading="lazy"
              >
            </div>
          {% endif %}
        </div>
        <div class="socil_block_flx">
          {% for block in section.blocks %}
            <div class="socil_img_multiple">
              {% if block.settings.blk_img != blank %}
                <div class="social_animation_zoom">
                  <img
                    decoding="async"
                    data-src="{{ block.settings.blk_img | img_url: 'master' }}"
                    alt="petsnowy"
                    loading="lazy"
                  >
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div class="img_popup">
    <img src="" alt="petsnowy">
  </div>
</div>
<script>
  window.addEventListener('DOMContentLoaded', () => {
    const img = Array.from(document.querySelectorAll('.social_main_div img'));
    const imgPopup = document.querySelector('.img_popup');
    img.forEach((item) => {
      item.addEventListener('click', () => {
        imgPopup.style.display = 'block';
        imgPopup.querySelector('img').src = item.src;
      });
    });
    imgPopup.addEventListener('click', () => (imgPopup.style.display = 'none'));
  });
</script>
<style>
  .social_main_div .img_popup {
    cursor: pointer;
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0px;
    left: 0px;
    background: rgba(0, 0, 0, 0.7);
    display: none;
    z-index: 100;
  }
  .social_main_div .img_popup img {
    position: absolute;
    transform: translate(-50%, -50%);
    top: 50%;
    left: 50%;
    height: 90vh;
    width: auto;
    object-fit: contain;
  }
</style>
{% schema %}
{
  "name": "Social Image Text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "insta_txt",
      "label": "Instagram Text"
    },
    {
      "type": "url",
      "id": "app_url",
      "label": "Url"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "space_top",
      "min": 0,
      "max": 100,
      "label": "Padding Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "space_bottom",
      "min": 0,
      "max": 100,
      "label": "Padding Bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "blk_img",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social Image Text"
    }
  ]
}
{% endschema %}

