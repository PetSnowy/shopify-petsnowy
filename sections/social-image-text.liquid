{% style %}
  .social_main_div {
    padding-top: {{section.settings.space_top }}px;
    padding-bottom: {{section.settings.space_bottom }}px;
  }
{% endstyle %}

<div class="social_main_div">
  <div class="page-width">
    <div class="social_contain_flx">
      <div class="social_pt_1">
        <div class="charms_hedng">
          {% if section.settings.heading != blank %}
            <h3 data-aos="fade-up" data-aos-duration="800">{{ section.settings.heading }}</h3>
          {% endif %}
        </div>
        <div class="social_intsa">
          {% if section.settings.app_url != blank %}
            <a data-aos="fade-up" data-aos-duration="800" href="{{ section.settings.app_url }}" target="blank">
              <span class="socl_insta_icon">{% render 'icon-instagram' %}</span>
              <span>{{ section.settings.insta_txt }}</span>
            </a>
          {% endif %}
        </div>
      </div>
      <div class="social_pt_2">
        <div class="social_img_large">
          {% if section.settings.img != blank %}
            <div class="social_animation_zoom">
              <img decoding="async" src="{{ section.settings.img | img_url: 'master' }}" loading="lazy" alt="petsnowy">
            </div>
          {% endif %}
        </div>
        <div class="socil_block_flx">
          {% for block in section.blocks %}
            <div class="socil_img_multiple">
              {% if block.settings.blk_img != blank %}
                <div class="social_animation_zoom">
                  <img
                    decoding="async"
                    src="{{ block.settings.blk_img | img_url: 'master' }}"
                    loading="lazy"
                    alt="petsnowy"
                  >
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Social Image Text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "insta_txt",
      "label": "Instagram Text"
    },
    {
      "type": "url",
      "id": "app_url",
      "label": "Url"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "space_top",
      "min": 0,
      "max": 100,
      "label": "Padding Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "space_bottom",
      "min": 0,
      "max": 100,
      "label": "Padding Bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "blk_img",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social Image Text"
    }
  ]
}
{% endschema %}

