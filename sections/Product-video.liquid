{%- style -%}
  .banner_inner {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .banner_inner {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="product_video_div custom-banr-main page-width">
  <div class="banner_inner">
    <div class="video_link">
      {% if section.settings.vdio != blank %}
        <video
          class="custom_videoss"
          width="100%"
          height="100%"
          muted
          autoplay
          playsinline
          loop
          poster="{{ section.settings.vdio_img | img_url: 'master'}}"
        >
          <source src="{{ section.settings.vdio }}" type="video/mp4">
        </video>
      {% endif %}
      <div class="baner_contain">
        {% if section.settings.heading != blank %}
          <h2 class="cstm_banner_title" data-aos="fade-up" data-aos-duration="700">{{ section.settings.heading }}</h2>
        {% endif %}
        <p data-aos="fade-up" data-aos-duration="800">{{ section.settings.text }}</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Video",
  "settings": [
    {
      "type": "image_picker",
      "id": "vdio_img",
      "label": "Video Image"
    },
    {
      "type": "url",
      "id": "vdio",
      "label": "Video"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product Video"
    }
  ]
}
{% endschema %}

