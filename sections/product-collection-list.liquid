{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="itg_product_collections">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="product_colls">
      <div class="product_colls_one gutter_div">
        <a href="{{ section.settings.url }}">
          {% if section.settings.image != blank %}
            <img src="{{ section.settings.image | img_url: 'master' }}" alt="petsnowy" loading="lazy">
            <div class="product_colls_text">
              <h2 data-aos="fade-up" data-aos-duration="700">{{ section.settings.title }}</h2>
              <span data-aos="fade-up" data-aos-duration="800">{{ section.settings.text }}</span>
            </div>
          {% endif %}
        </a>
      </div>
      <div class="product_colls_two gutter_div">
        <a href="{{ section.settings.urls }}">
          {% if section.settings.images != blank %}
            <img src="{{ section.settings.images | img_url: 'master' }}" alt="petsnowy" loading="lazy">
            <div class="product_colls_text">
              <h2 data-aos="fade-up" data-aos-duration="800">{{ section.settings.titles }}</h2>
              <span data-aos="fade-up" data-aos-duration="900">{{ section.settings.texts }}</span>
            </div>
          {% endif %}
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Collections",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Select Collection Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Collection Title"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Collection Text"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Collection Link"
    },
    {
      "type": "image_picker",
      "id": "images",
      "label": "Select Collection Image"
    },
    {
      "type": "text",
      "id": "titles",
      "label": "Collection Title"
    },
    {
      "type": "text",
      "id": "texts",
      "label": "Collection Text"
    },
    {
      "type": "url",
      "id": "urls",
      "label": "Collection Link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product Collections"
    }
  ]
}
{% endschema %}
