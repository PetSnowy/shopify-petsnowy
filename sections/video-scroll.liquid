{{ 'video-scroll.css' | asset_url | stylesheet_tag }}

<section id="video-srcoll">
  <div class="video-scroll-wrapper swiper page-width">
    <div class="video-img-wrapper swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'video_img' %}
          <div class="video-img swiper-slide">
            <picture>
              <source media="(min-width: 901px)" srcset="{{ block.settings.image_picker | img_url: 'master' }}">
              <source media="(max-width: 900px)" srcset="{{ block.settings.mb_image_picker | img_url: 'master' }}">
              <img src="{{ block.settings.image_picker | img_url: 'master' }}" alt="{{ block.settings.text }}">
            </picture>
            <div class="video-play"></div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="swiper-button">
      <div class="swiper-button-prev">
        {% render 'icon-arrow-comment' %}
      </div>
      <div class="swiper-button-next">
        {% render 'icon-arrow-comment' %}
      </div>
    </div>
  </div>
  <div class="video-scroll portrait-screen">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'video_url' %}
          <div class="video-url-wrapper">
            <video src="{{ block.settings.video_url }}"></video>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</section>

<script>
  $(function () {
    const abscissaSwiper = new Swiper('.video-scroll-wrapper', {
      slidesPerView,
      spaceBetween: 20,
      speed: 600,
      loop: true,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });

    const portraitSwiper = new Swiper('.portrait-screen', {
      direction: 'vertical',
      grabCursor: true,
      // spaceBetween: 20,
      mousewheel: true,
      autoHeight: true,
      pagination: {
        el: '.swiper-pagination',
      },
    });

    const videoList = Array.from(document.querySelectorAll('.video-scroll-wrapper .swiper-slide'));
    videoList.forEach((item, index) =>
      item.addEventListener('click', () => {
        portraitSwiper.slideTo(index, 1000, false); //切换到第一个slide，速度为1秒
      });
    );
  });
</script>
