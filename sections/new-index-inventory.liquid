{{ 'index-inventory.css' | asset_url | stylesheet_tag }}

<div class="new-index-inventory">
  <div class="page-width">
    <picture>
      <source media="(min-width: 901px)" data-srcset="{{ section.settings.pc_image | img_url: 'master' }}">
      <source media="(max-width: 900px)" data-srcset="{{ section.settings.mb_image | img_url: 'master' }}">
      <img
        alt="petsnowy"
        decoding="async"
        loading="lazy"
      >
    </picture>
    <a href="/products/snow-self-cleaning-litter-box">Order Now</a>
  </div>
</div>

{% schema %}
{
  "name": "new-index-inventory",
  "settings": [
    {
      "type": "image_picker",
      "id": "pc_image",
      "label": "pc image"
    },
    {
      "type": "image_picker",
      "id": "mb_image",
      "label": "mb image"
    }
  ],
  "presets": [
    {
      "name": "new-index-inventory"
    }
  ]
}
{% endschema %}
