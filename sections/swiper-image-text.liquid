<link rel="stylesheet" href="{{ 'swiper-image-text.css' | asset_url }}">
<h2 class="swiper-image-text-title">{{ section.settings['swiper-image-text-title'] }}</h2>
<div class="swiper page-width swiper-image-text pc" id="swiper-image-text{{ section.id }}">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <div class="image">
          <img decoding="async" src="{{ block.settings.imagerow | img_url: 'master' }}" alt="petsnowy" loading="lazy">
        </div>
        <div class="content-wrapper">
          <h2>{{ block.settings.title }}</h2>
          <p>{{ block.settings.text }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
<div class="m-swiper page-width swiper-image-text">
  {% for block in section.blocks %}
    <div class="swiper-slide">
      <div class="image">
        <img decoding="async" src="{{ block.settings.imagerow | img_url: 'master' }}" alt="petsnowy" loading="lazy">
      </div>
      <div class="content-wrapper">
        <h2>{{ block.settings.title }}</h2>
        <p>{{ block.settings.text }}</p>
      </div>
    </div>
  {% endfor %}
</div>
<script>
  $(function () {
    const swiperImageTextEl = document.querySelectorAll('.swiper-image-text.pc');
    for (let i = 0; i < swiperImageTextEl.length; i++) {
      const swiperImageTextElId = swiperImageTextEl[i].id;
      const swiperImageText = new Swiper(`#${swiperImageTextElId}`, {
        preventDefault: false,
        grabCursor: true,
        slidesPerView: 'auto',
        spaceBetween: 20,
      });
    }
  });
</script>
{% schema %}
{
  "name": "swiper-image-text",
  "settings": [
    {
      "type": "text",
      "id": "swiper-image-text-title",
      "label": "swiper-image-text-title"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "column",
      "settings": [
        {
          "type": "image_picker",
          "id": "imagerow",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "swiper-image-text",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}
