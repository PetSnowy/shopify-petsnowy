{%- style -%}
  .order-baner-top {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .order_bannr_btn svg path {
      stroke: {{ section.settings.color_3 }};
  }

  @media screen and (min-width: 750px) {
    .order-baner-top {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="order-baner-top" style="background-color:{{ section.settings.bg_color }};">
  <div class="page-width">
    {% comment %}<a href="{{ section.settings.url }}">{% endcomment %}
    <div class="order_d_flex">
      {% if section.settings.heading != blank %}
        <h2 style="color:{{ section.settings.color_1 }};">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <div style="color:{{ section.settings.color_2 }};">
          {{ section.settings.text }}
        </div>
      {% endif %}

      {% if section.settings.url == blank %}
        {% if section.settings.btn != blank %}
          <div
            class="button button--primary order_bannr_btn {% if section.settings.checked %}liner{% endif %}"
            style="background-color:{{ section.settings.bg_color_1 }};"
          >
            <span style="color:{{ section.settings.color_3 }};">{{ section.settings.btn }}</span>
          </div>
        {% endif %}
      {% else %}
        <a
          class="button button--primary"
          href="{{ section.settings.url }}"
          style="color:{{ section.settings.color_3 }}; background-color:{{ section.settings.bg_color_1 }};"
        >
          {{- section.settings.btn -}}
        </a>
      {% endif %}
    </div>
    {% comment %}</a> {% endcomment %}
  </div>
</div>

{% schema %}
{
  "name": "Order Banner",
  "settings": [
    {
      "type":"color",
      "id":"bg_color",
      "label":"Background"
    },
    {
      "type":"text",
      "id":"heading",
      "label":"Heading"
    },
    {
      "type":"color",
      "id":"color_1",
      "label":"Color"
    },
    {
      "type":"richtext",
      "id":"text",
      "label":"Text"
    },
    {
      "type":"color",
      "id":"color_2",
      "label":"Color"
    },
    {
      "type":"text",
      "id":"btn",
      "label":"Button"
    },
    {
      "type":"url",
      "id":"url",
      "label":"Url"
    },
    {
      "type":"checkbox",
      "id":"checked",
      "label":"Use outline button style",
      "default": false
    },
    {
      "type":"color",
      "id":"color_3",
      "label":"Color"
    },
    {
      "type":"color",
      "id":"bg_color_1",
      "label":"Background"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 20
  }
  ],
  "presets":[
    {
      "name":"Order Banner"
    }
  ]
}
{% endschema %}

