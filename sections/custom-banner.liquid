{%- style -%}
  .banner_inner {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .banner_inner {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="custom-banr-main">
  <div class="banner_inner">
    <div class="video_link">
      {% if section.settings.vdio != blank %}
        <video class="desk_video custom_videoss" width="100%" height="100%" muted autoplay playsinline {% if section.settings.vdio_img != blank %}poster="{{ section.settings.vdio_img | img_url: 'master'}}" {% endif %}>
          <source src="{{ section.settings.vdio }}" type="video/mp4">
        </video>
      {% endif %}
       {% if section.settings.mobvdio != blank %}
        <video class="mob_video custom_videoss" width="100%" height="550px" muted autoplay playsinline {% if section.settings.mobvdio_img != blank %}poster="{{ section.settings.mobvdio_img | img_url: 'master'}}" {% endif %}>
          <source src="{{ section.settings.mobvdio }}" type="video/mp4">
        </video>
      {% endif %}
      <div class="baner_contain">
        {% if section.settings.heading != blank %}
          <h1 class="cstm_banner_title">            
              <span>{{ section.settings.heading }}</span>            
          </h1>         
        {% endif %}
      </div>
      <div class="slide_arrow">
        {% render 'arrow-down-icon' %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type":"image_picker",
      "id":"vdio_img",
      "label":"Desktop Video Image"
    },
    {
      "type":"url",
      "id":"vdio",
      "label":"Desktop Video"
    },
    {
      "type":"image_picker",
      "id":"mobvdio_img",
      "label":"Mobile Video Image"
    },
    {
      "type":"url",
      "id":"mobvdio",
      "label":"Mobile Video"
    },
    {
      "type":"text",
      "id":"heading",
      "label":"Heading"
    },
    {
      "type":"url",
      "id":"url",
      "label":"Url"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets":[
    {
      "name":"Custom Banner"
    }
  ]
}
{% endschema %}

